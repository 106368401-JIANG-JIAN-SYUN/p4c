# Makefile for a fake backend that is used for testing the P4 v1.2 front-end.
# To be included in the main P4C compiler makefile

noinst_PROGRAMS += v12test
v12test_LDADD = libfrontend.a libp4ctoolkit.a

v12test_SOURCES = \
    backends/v12test/v12test.cpp \
    backends/v12test/midend.h \
    backends/v12test/midend.cpp

cpplint_FILES += $(v12test_SOURCES)

# Tests

# Generated by the targets below
-include $(srcdir)/v12tests.am
-include $(srcdir)/v1to12tests.am

CLEANFILES += \
	$(srcdir)/v12tests.am \
	$(srcdir)/v1to12tests.am

# Unfortunately this does not rerun if a test is deleted.
$(srcdir)/v12tests.am: $(srcdir)/testdata/v1_2_samples/*.p4 $(srcdir)/testdata/v1_2_errors/*.p4
	@$(GENTESTS) $(srcdir) v12 $(srcdir)/backends/v12test/run-v12-sample.py $^ >$@

$(srcdir)/v1to12tests.am: $(srcdir)/testdata/v1_samples/*.p4
	@$(GENTESTS) $(srcdir) v1to12 $(srcdir)/backends/v12test/run-v12-sample.py $^ >$@

V12BUGS = \
    v1to12/testdata/v1_samples/09-IPv4OptionsUnparsed.p4.test \
    v1to12/testdata/v1_samples/TLV_parsing.p4.test \
    v1to12/testdata/v1_samples/truncate.p4.test

XFAIL_TESTS += \
    $(V12BUGS) \
    v12/testdata/v1_2_samples/cast-call.p4.test
